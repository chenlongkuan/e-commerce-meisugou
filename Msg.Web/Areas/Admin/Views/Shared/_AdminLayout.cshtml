                        </li>
                                                   <li>
                            <a href="@Url.Action("coupons", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>优惠券<span class="fa arrow"></span></a>

                        </li>
                        <li>
                            <a href="@Url.Action("CreditGoods", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>积分商品<span class="fa arrow"></span></a>

                        </li>
                        <li>
                            <a href="@Url.Action("CreditsExchangeLogs", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>积分兑换<span class="fa arrow"></span></a>

                        </li>
                        <li class="active">
                            <a href="#"><i class="fa fa-sitemap fa-fw"></i> 创业集市<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level collapse in" aria-expanded="true">
                                <li>
                                    <a href="@Url.Action("SuppliersEntity", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>创业者管理<span class="fa arrow"></span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Schools", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>商品审核<span class="fa arrow"></span></a>
                                </li>

                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                      
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper" style="margin: 0px 0px 0px 10%; height: 1500px; min-height: 247px;">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">@ViewBag.InnerTopTitle</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <div class="row">
                @RenderBody()
            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Bootstrap Core JavaScript -->
    <script src="@Url.Content("~/Content/AdminTemplate/bower_components/bootstrap/dist/js/bootstrap.min.js")"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="@Url.Content("~/Content/AdminTemplate/bower_components/metisMenu/dist/metisMenu.min.js")"></script>

    <!-- Custom Theme JavaScript -->
    <script src="@Url.Content("~/Content/AdminTemplate/dist/js/sb-admin-2.js")"></script>

    <script src="@Url.Content("~/Content/ShowLoading/jquery.showLoading.min.js")"></script>

    <script src="@Url.Content("~/Content/bootstrapdialog/src/js/bootstrap-dialog.js")"></script>

