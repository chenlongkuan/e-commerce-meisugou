                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="#"><i class="fa fa-user fa-fw"></i>User Profile</a>
                        </li>
                        <li><a href="#"><i class="fa fa-gear fa-fw"></i>Settings</a>
                        </li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("LoginOut", "Account", new { area = "" })"><i class="fa fa-sign-out fa-fw"></i>Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation" style="width: 10%">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>

                        <li>
                            <a href="@Url.Action("Index", "Home", new {area = "Admin"})"><i class="fa fa-dashboard fa-fw"></i>Dashboard</a>
                        </li>
                        <li class="active">
                            <a href="#"><i class="fa fa-sitemap fa-fw"></i> 系统设置<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level collapse in" aria-expanded="true">
                                <li>
                                    <a href="@Url.Action("Regions", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>区域管理<span class="fa arrow"></span></a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Schools", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>学校管理<span class="fa arrow"></span></a>
                                </li>
                                
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <li>
                            <a href="@Url.Action("AdManage", "AdManage", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>广告管理<span class="fa arrow"></span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Brands", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>品牌管理<span class="fa arrow"></span></a>

                        </li>
                        <li>
                            <a href="@Url.Action("Categories", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>类目管理<span class="fa arrow"></span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Users", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>会员管理<span class="fa arrow"></span></a>
                        </li>
                        <li>
                            <a href="@Url.Action("Products", "Home", new { area = "Admin" })"><i class="fa fa-bar-chart-o fa-fw"></i>库存管理<span class="fa arrow"></span></a>
