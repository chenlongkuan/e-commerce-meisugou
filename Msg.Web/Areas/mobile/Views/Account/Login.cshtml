@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta name="description" content="">
    <meta name="author" content="">

    <title>登陆-美速购 - 大学生专属O2O购物商城，零食、牛奶、休闲食品、在校自主创业、商企校园营销一站式平台。</title>

    <link href="@Url.Content("~/Content/MobileTemplate/css/login.css")" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/jquery.2.1.3.js")"></script>

</head>

<body>
    <div class="msg_c_t" style="top:0">
        <div class="c_t_1" id="errorMsg">@ViewBag.ErrMsg</div>
    </div>
    <div class="login_header">
        <img src="@Url.Content("~/Content/MobileTemplate/images/logo.png")">
    </div>
    <form method="POST" action="@Url.Action("Login")">
        @Html.AntiForgeryToken()
        <div class="login_input">
            <input name="Account" id="txt_login_Account" type="text" class="input1" placeholder="用户名" />
        </div>
        <div class="login_input">
            <input name="Password" id="txt_login_Password" type="password" class="input2" placeholder="密码"/>
        </div>
        <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl" />
        <div class="login_input"><a href="JavaScript:;" id="btn_login_submit" class="a1">登录</a></div>
        <div class="login_input"><a href="@Url.Action("Regist")" class="a2">没有账号，立即注册？</a></div>
    </form>
    <!-- jQuery -->
    <script src="@Url.Content("~/Scripts/jquery.2.1.3.js")"></script>

    <script src="@Url.Content("~/Scripts/Common.js")"></script>

    <script src="@Url.Content("~/Scripts/mobileRegist.js")"></script>
    <script type="text/javascript">
        $(function() {
            window.setTimeout('$("#errorMsg").hide().text("");', 10000);
        })
    </script>
</body>

</html>
