@using Msg.Utils
@model IQueryable<Msg.Entities.GoodsEntity>



@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <div class="main_l_2">
        <a href="@Url.Action("Details", new {id = item.Id})" target="_blank">
            <img class="lazy" data-original="@ImagesHelper.GetImgWidthHeight(item.Product.MainLogo, 150, 150, false)" width="150" height="150">
        </a>
        <a href="@Url.Action("Details", new {id = item.Id})" target="_blank" class="a_1">@item.ShortTitle</a>
        <b>￥@(item.SellPrice.ToString("F"))</b>
    </div>
    }
    <input type="hidden" id="h_hotSelling_page" value="@ViewBag.PageNo" />
}