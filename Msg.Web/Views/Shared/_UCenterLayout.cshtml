@using Msg.Web.App_Start
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <!-- InstanceBeginEditable name="doctitle" -->
    <title>@ViewBag.Title - 个人中心 - 美速购 - 大学生专属O2O购物商城，零食、牛奶、休闲食品、在校自主创业、商企校园营销一站式平台。</title>
    <link href="/fav.ico" mce_href="favicon.ico" rel="bookmark" type="image/x-icon" />
    <link href="/fav.ico" mce_href="favicon.ico" rel="icon" type="image/x-icon" />
    <link href="/fav.ico" mce_href="favicon.ico" rel="shortcut icon" type="image/x-icon" /> 
    <!-- InstanceEndEditable -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/content/css/normalize.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/msg_main.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/css/per.css")" />
    <!-- Bootstrap Core CSS -->
    @*<link href="@Url.Content("~/Content/AdminTemplate/bower_components/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet">*@
    <link href="@Url.Content("~/Content/bootstrapdialog/dist/css/bootstrap-dialog.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/ShowLoading/showLoading.css")" rel="stylesheet" />

    <script src="@Url.Content("~/Scripts/jquery.2.1.3.js")"></script>
    @RenderSection("head", false)

    <!-- InstanceBeginEditable name="head" -->
    <!-- InstanceEndEditable -->
</head>

<body>
    @Html.Partial("_Header")
    <div class="msg_w" style="height: auto">
        <div class="per_mb_h">
            <a href="/">首页</a>&nbsp;&nbsp;/&nbsp;&nbsp;个人中心
        </div>
        <div class="clearfix">
            <div class="per_left">
                <div class="left_t">个人中心</div>
                <a href="@Url.Action("Index", "Me")" class="@ViewBag.MenuIndexClassOver">我的个人中心</a>
                <a href="@Url.Action("MyOrders", "Me")" class="@ViewBag.MenuMyOrdersClassOver">我的订单</a>
                <a href="@Url.Action("MyMarket", "Me")" class="@ViewBag.MenuMyMarketClassOver">我的创业集市</a>
                <a href="@Url.Action("MyExchanges", "Me")" class="@ViewBag.MenuMyExchangesClassOver">我的积分兑换</a>
                <a href="@Url.Action("MyComments", "Me")" class="@ViewBag.MyCommentsMenuClassOver">我的评论</a>
                <a href="@Url.Action("MyNotifies", "Me")" class="@ViewBag.MyNotifiesMenuClassOver">站内信</a>
                <a href="@Url.Action("MyCoupons", "Me")" class="@ViewBag.MyCouponsMenuClassOver">我的优惠劵</a>
                <div class="left_t">账户管理</div>
                <a href="@Url.Action("MyAddresses", "Me")" class="@ViewBag.MyAddressMenuClassOver">收货地址管理</a>
                @if (!UserAuth.IsConnactUser)
                {
                    <a href="@Url.Action("ModifyPassword", "Me")" class="@ViewBag.ModifyPwdMenuClassOver">修改密码</a>
                }

            </div>
            <!-- InstanceBeginEditable name="EditRegion1" -->
            @RenderBody()
            <!-- InstanceEndEditable -->
        </div>
    </div>
    @Html.Partial("_Footer")
    <script type="text/javascript" src="@Url.Content("~/Content/js/aiqu.js")"></script>
    <script src="@Url.Content("~/Content/ShowLoading/jquery.showLoading.min.js")"></script>

    <script src="@Url.Content("~/Content/bootstrapdialog/dist/js/bootstrap-dialog.min.js")"></script>
    <script src="@Url.Content("~/Scripts/Common.js")"></script>
    <script src="@Url.Content("~/Scripts/me.js")"></script>

    @RenderSection("scripts", required: false)

</body>
<!-- InstanceEnd -->
</html>
